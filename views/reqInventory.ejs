<!DOCTYPE html>
<html>

<% include ../partials/stylesheetLinks %>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <% include ../partials/header %>

  <% include ../partials/nav %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Request Inventory
        <small>Request inventory with the finishing of stocks.</small>
      </h1>
    
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">

        <div class="col-md-6">
          <div class="box box-primary">

          <div>
         <form action="/reqInventory" method="post">
              <div class="box-body">

  <div class="form-group">
   <h3>Vendor Name</h3>
   <select class="form-control" required="required" id="compName" name="compName">
   <% result1.forEach(function(result1) { %>
     <option><%= result1.Company %></option>
   <% }); %>
 </select>
    </div>

    <div class="form-group">
     <h3>Category Name</h3>
     <select class="form-control" required="required" id="catName" name="catName">
     <% result2.forEach(function(result2) { %>
       <option><%= result2.CategoryName %></option>
     <% }); %>
   </select>
      </div>

      <div class="form-group">
       <h3>Product Name</h3>
       <select class="form-control" required="required" id="proName" name="proName">
       <% result3.forEach(function(result3) { %>
         <option><%= result3.PName %></option>
       <% }); %>
     </select>
        </div>

              <div class="form-group">
                <h3>Product Size </h3>
                 <input type="text" class="form-control" id="pSize" placeholder="Enter Product Size" required="required" name="pSize">
              </div>
              <div class="form-group">
                <h3>Colour </h3>
                <input type="text" class="form-control" id="pColour" placeholder="Enter Product Colour" required="required" name="pColour">
              </div>
              <div class="form-group">
                <h3>Quantity </h3>
                <input type="text" class="form-control" id="pQuantity" placeholder="Enter Product Quantity" required="required" name="pQuantity">
              </div>
              <div class="form-group">
                <h3>Brand Name</h3>
                <input type="text" class="form-control" id="pBrand" placeholder="Enter Product Brand Name" required="required" name="pBrand">
              </div>

              </div>
              <!-- /.box-body -->

              <div class="form-group">


                    <div class="col-sm-8">
                        <!-- the avatar markup -->
                            <div id="kv-avatar-errors-1" class="center-block" style="display:none;"></div>
                        <div class="kv-avatar center-block">

                        </div>

                    </div>
            </div> <!-- /form-group-->

              <div class="box-footer">
                <input type="submit" value="Send Order" class="btn btn-primary"/>

              </div>
            </form>
          </div>
          </div>
        </div>

                <!-- /.box-body -->
      </div>
    </section>
    <!-- /.content -->
  </div>

</div>
<!-- ./wrapper -->

<% include ../partials/scripts %>

</body>
</html>
