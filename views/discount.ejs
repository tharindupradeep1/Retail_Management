<!DOCTYPE html>
<html>

<% include ../partials/stylesheetLinks %>

<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  <% include ../partials/header %>

  <% include ../partials/nav %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Discount Rates
        <small>Update the the Discount rates.</small>
      </h1>
    
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">

        <div class="col-md-6">
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Update Discount Rate</h3>
            </div>
          <div>
            <% var pID;
            if(pid==0)
                pID = result2[0].PID;
                else
                pID = pid;%>
          <form action="/discount?pid=<%=pID%>" method="post">
              <div class="box-body">

  <div class="form-group">
    <label for="selectItem">Select Product</label>
    <select onchange="updateSecondSelection();" class="form-control" required="required" id="pID" name="pID">
    <% result2.forEach(function(result2) {
      if(pid==result2.PID){%>
      <option selected="selected" value= <%=result2.PID %>><%= result2.PID %> - <%= result2.PName %></option>
      <%}%>
        <%if(pid!=result2.PID){%>
          <option value= <%=result2.PID %>><%= result2.PID %> - <%= result2.PName %></option>
    <% }}); %>
  </select>
    </div>

              <div class="form-group">
                <label for="orderQuantity">Enter a Discounts Rate(%)</label>
                <input type="number" class="form-control" id="discount" value= "<%=result1[0].discount %>" required="required" name="discount">
              </div>
              </div>
              <!-- /.box-body -->
              <div class="form-group">
                    <div class="col-sm-8">
                        <!-- the avatar markup -->
                            <div id="kv-avatar-errors-1" class="center-block" style="display:none;"></div>
                        <div class="kv-avatar center-block">
                        </div>
                    </div>
            </div> <!-- /form-group-->

              <div class="box-footer">
                <input type="submit" value="Update" class="btn btn-primary"/>
              </div>
            </form>
          </div>
          </div>
        </div>
      </div>
    </section>
    <!-- /.content -->
  </div>

</div>
<!-- ./wrapper -->
<script>
    function updateSecondSelection(){
    var product= document.getElementById('pID');
    var select = product.value;
    location.assign("/discount2?PID="+select+"");
    }
</script>
<% include ../partials/scripts %>



</body>
</html>
